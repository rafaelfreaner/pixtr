<h1>Sign up!!</h1>

<%= form_for(@user) do |form| %>
	<%= render "errors", object: @user %>
  <div>
	<%= form.label :email %>
	<%= form.email_field :email %>
  </div>
   <div>
	<%= form.label :password %>
	<%= form.password_field :password %>
  </div>
    <%= form.submit "Sign up!!" %>
<% end %>

<h1>Sign in!!</h1>

<%= form_for :session, url: session_path do |form| %>
  <div>
	<%= form.label :email %>
	<%= form.email_field :email %>
  </div>
  <div>
	<%= form.label :password %>
	<%= form.password_field :password %>
  </div>
    <%= form.submit "Sign in!!" %>
<% end %>